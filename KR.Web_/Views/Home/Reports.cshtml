@{
    ViewBag.Title = "Reports";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2 reports">
        <div class="OrderReports">
            @using (Html.BeginForm("GetAvgOrderReport", "Home", FormMethod.Get))
            {
                <span>Order land size and work count report</span><br />
                <label class="radio-inline">
                    <input checked type="radio" value="1" name="Time">All Time
                </label>
                <label class="radio-inline">
                    <input type="radio" value="2" name="Time">Year
                </label>
                <label class="radio-inline">
                    <input type="radio" value="3" name="Time">Month
                </label><br />
                <button type="submit" class="btn btn-default send">Get orders report</button>
            }
            <hr />
            @using (Html.BeginForm("GetExtraOrderReport", "Home", FormMethod.Get))
            {
                <span>Order</span><br />
                <span>By date:</span><br />
                <label class="radio-inline">
                    <input checked type="radio" value="1" name="Time">All Time
                </label>
                <label class="radio-inline">
                    <input type="radio" value="2" name="Time">Year
                </label>
                <label class="radio-inline">
                    <input type="radio" value="3" name="Time">Month
                </label><br />
                <span>By land size:</span><br />
                <label class="radio-inline">
                    <input checked type="radio" value="1" name="Size">All
                </label>
                <label class="radio-inline">
                    <input type="radio" value="2" name="Size">Less 1000
                </label>
                <label class="radio-inline">
                    <input type="radio" value="3" name="Size">Less 500
                </label><br />
                <button type="submit" class="btn btn-default send">Get order report</button>
            }
            <hr />
            @using (Html.BeginForm("GetExelDb", "Home", FormMethod.Get))
            {
                <span>Export to exel</span><br />
                <button type="submit" class="btn btn-default send">Get exel export file</button>
            }
        </div>
    </div>
</div>
